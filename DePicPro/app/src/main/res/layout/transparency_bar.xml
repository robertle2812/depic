<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:id="@+id/transparency_layout"
    android:layout_height="@dimen/dimens_element"
    android:gravity="center"
    android:visibility="invisible"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="@dimen/dimens_element"
    >

    <ImageView
        android:layout_marginLeft="16dp"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@drawable/transparanct_none"/>
    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:progressDrawable="@drawable/seekbar_progres"
        android:thumb="@drawable/thumb"
        android:progress="100"
        />
    <ImageView
        android:layout_marginRight="16dp"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@drawable/transparanct_full"
        />
</LinearLayout>