<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/social_layout"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:visibility="invisible"
    android:layout_marginBottom="@dimen/dimens_element"
    android:paddingRight="4dp"
    android:paddingLeft="4dp"
    >

    <ImageView
        android:id="@+id/instagram"
        style="@style/element_fixed_bar_panel"
        android:src="@drawable/btn_share_instagram_off"
        />
    <ImageView
        android:id="@+id/facebook"
        style="@style/element_fixed_bar_panel"
        android:src="@drawable/btn_share_facebook_off"
        />
    <ImageView
        android:id="@+id/twitter"
        style="@style/element_fixed_bar_panel"
        android:src="@drawable/btn_share_twitter_off"
        />
    <ImageView
        android:id="@+id/tumblr"
        style="@style/element_fixed_bar_panel"
        android:src="@drawable/btn_tumblr_off"
        />
    <ImageView
        android:id="@+id/save"
        style="@style/element_fixed_bar_panel"
        android:src="@drawable/btn_save_off"
        />

</LinearLayout>